<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LogActivity"
    android:orientation="vertical">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50sp"
        android:fontFamily="serif-monospace"
        android:layout_gravity="center"
        android:text="Pocket Doctor"
        android:textStyle="bold"
        android:textColor="#F52F5D"
        android:textSize="34dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="30dp">

        <EditText
            android:id="@+id/et_UserEmail"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="30dp"
            android:padding="10sp"
            android:fontFamily="sans-serif-condensed"
            android:textSize="20sp"
            android:hint=" E-mail"
            android:textColorHint="#f52f5d"
            android:background="@drawable/ic_edit_text_box"
            android:drawableLeft="@drawable/ic_user_icon"
            android:textColor="#747373"
            android:inputType="text" />

        <EditText
            android:id="@+id/et_UserPassword"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="20sp"
            android:textSize="20sp"
            android:padding="10sp"
            android:drawableLeft="@drawable/ic_password_icon"
            android:fontFamily="sans-serif-condensed"
            android:hint=" Password"
            android:textColorHint="#f52f5d"
            android:background="@drawable/ic_edit_text_box"
            android:textColor="#747373"
            android:inputType="textPassword" />
        <Button
            android:id="@+id/btm_LoginButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Login"
            android:textSize="20sp"
            android:layout_marginTop="30sp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_gravity="center"
            android:background="@drawable/ic_buttone_model1"
            android:textColor="#ffffff"
            android:fontFamily="sans-serif-condensed"
            android:drawableLeft="@drawable/ic_mouse_icon"
            android:padding="10dp" />

        <Button
            android:id="@+id/btm_Registration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/ic_buttone_model2"
            android:text="Registation"
            android:textAllCaps="false"
            android:textSize="15sp"
            android:textColor="#ffffff"
            android:drawableLeft="@drawable/ic_input_icon"
            android:padding="8dp" />




    </LinearLayout>



</LinearLayout>